  <body>
    <header class="container">
      <i class="fa-solid fa-bars burgerMenu "></i>
      <div class="text-center">
        <h1 class=""><a href="/feed">P4P</a></h1>
      </div>

          <nav class="topNavigation">
            <ul>
              <a href="/feed"><li>Feed</li></a>
              <a href="/logout"><li>LogOut</li></a>
            </ul>
          </nav>
      <a href="/profile/<%= user.id%>">
        <div class="avatar">
          <div>
            <h3>My Profile</h3>
          </div>
          <div class="w-24 rounded-full">
            <img class="profilePic" src="https://placeimg.com/192/192/people" />
          </div>
        </div>


      </a>
     

     

    </header>
    
    <section class="profileHeader">

        <section class="innerProfileHeader">

            <div class="profileAvatar">
                <div class="profileImageContainer">
                  <img class="bigProfilePic" src="<%= profileInfos[0].profilePic%>" />
                </div>
    
              </div>
    
              <h2 class="profileName"><%= profile.userName %></h2>

        </section>

        

    </section>


    <main class="profileMain">

        

        <section class="profileStats">

            <h4>Posts made : <%= posts.length %></h4>
            <h4> Skills : <%= profileInfos[0].skills %></h4>
            <h4>Interests : <%= profileInfos[0].interests %></h4>

        </section>

        <section class="profilePosts">

            <% for(let i=0; i < posts.length; i++) {%>
                <section class="post-card">
                
                  <div class="avatar">
                   
                    <div class="w-24 rounded-full">
                      <img class="profilePic" src="<%= profileInfos[0].profilePic%>" />
                    </div>

                    <div>
                      <a href="/profile/<%= posts[i].createdBy %>"><h4><%= posts[i].userName %></h4></a>

                    </div>
                  </div>
                         
                  
                  <p ><%= posts[i].postText %></p>
                 

                

                  <a href="/post/<%= posts[i].id%>" class="moreButton"><i class="fa-solid fa-caret-down"></i></a>
                  <!-- <a href="" class="moreButton"><i class="fa-solid fa-eye"></i></a> -->


                </section>
                
                  
                    
          
              <% } %>      

        </section>

    </main>



        
    


    

