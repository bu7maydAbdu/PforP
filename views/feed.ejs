  </head>
  <body>
    <header class="container">
      <div class="text-center">
        <h1 class=""><a href="/feed">P4P</a></h1>
      </div>
    
      <div class="avatar">
        <div>
          <h3>My Profile</h3>
        </div>
        <div class="w-24 rounded-full">
          <img src="https://placeimg.com/192/192/people" />
        </div>
      </div>
    </header>
    
    
    
    <main>
        <aside>
          <a href=""><h3>All Posts</h3></a>
            <a href=""><h3>volunteers posts</h3></a>
            <a href=""><h3>Cases posts</h3></a>
        </aside>
        <section class="feed-center">
          <form action="/post/createPost" method="POST">


            <input type="text" name="title" id="titleinput" placeholder="title">
            <textarea name="content" id="postTxtArea" placeholder="write your post content here"></textarea>
            <section class="selection">
              <select name="postType" id="postType">    
                <option value="volunteer">volunteer</option>
                <option value="searcher">searcher</option>
            </select>

              <select name="sector" id="sector">
                <option value="general">general</option>
    
                <option value="health">health</option>
                <option value="tech">tech</option>
            </select>
            <input type="file" class="form-control" id="imageUpload" name="file">
            <input type="submit" value="submit">
            </section>
            
          </form>
          <!-- <section id="addPost">
            <button>
              add Case
            </button>
           
          </section> -->
          
            <section class="feed-display">
                <% for(let i=0; i < posts.length; i++) {%>
                  <section class="post-card">
                           
                    <a href="/profile/<%= posts[i].createdBy %>"><h4><%= posts[i].userName %></h4></a>
                    <p ><%= posts[i].postText %></p>
                   

                 

                    <a href="/post/<%= posts[i].id%>" class="moreButton"><i class="fa-solid fa-caret-down"></i></a>
                    <!-- <a href="" class="moreButton"><i class="fa-solid fa-eye"></i></a> -->


                  </section>
                  
                    
                      
            
                <% } %>
            </section>
        </section> 
        
    </main>
    
    
  </body>
